    <style>
        .dropdown {
            position: relative;
            transition: all 0.5s ease-out;
        }

        .dropdown:hover {
            color: #222;
        }

        .dropdown>input.dropdown__input {
            display: none;
        }

        .dropdown {
            cursor: pointer;
            padding: 10px;
            font-size: 18px;
            color: #7D7A9E;
            text-decoration: none;
        }

        .dropdown>input.dropdown__input:checked~.dropdown__expand {
            max-height: max-content;
        }

        .dropdown>input.dropdown__input:checked~label {
            font-weight: 800;
        }

        .dropdown__expand {
            transition: all 0.5s ease-out;
            /* border: 1px solid #ccc */
            box-shadow: 0 0 9px 0 rgba(0, 0, 0, 0.2);
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            top: 100%;
            display: flex;
            flex-direction: column;
            overflow: hidden;
            padding: 10px 0;
            color: #222;
            background-color: #fff;
            max-height: 0;
            border-radius: 5px;
        }

        .dropdown__expand li {
            min-width: 100px;
            padding: 10px 0;
            text-align: center;

        }
    </style>
    <nav class="header-top__navbar">
        <ul>
